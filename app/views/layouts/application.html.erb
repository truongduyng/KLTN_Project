<!DOCTYPE html>
<html ng-app="sportApp">
<head>
  <meta charset="utf-8">
  <title>Sporta</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content=""/>

  <script src="https://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=geometry"></script>
  <%= favicon_link_tag %>

  <%= stylesheet_link_tag    'applicationCSS/application', media: 'all'%>
  <%= csrf_meta_tags %>

</head>
<body ng-controller="mainCtrl">


  <header data-ng-include="'appJS/header/_header.html'"></header>

  <!-- CONTENT HERE -->
  <div class="container">
    <div class="row">

      <div ng-show="signedIn()">

        <div class="col-sm-2">
          <div>
            <div ng-include="'appJS/sidebar/_side_bar.html'"></div>
            <section ng-include="'appJS/modules/_vietBaiModule.html'"></section>
          </div>
        </div>

        <div class="col-sm-10">
          <ui-view></ui-view>
        </div>

      </div>

      <div ng-hide="signedIn()">

        <div class="col-sm-12">
          <ui-view></ui-view>
        </div>

      </div>
    </div>

  </div>
  <!-- END CONTENT -->
  <!-- BN -->
  <div class="pull-right" flash-message="3000" ></div>
  <!-- EN -->
  <!-- FOOTER HERE  -->
  <footer data-ng-include="'appJS/footer/_footer.html'"></footer>
  <!-- END FOOTER -->

  <a href="#" class="scrollup"><i class="fa fa-angle-up active"></i></a>

  <%= javascript_include_tag 'appJS/application' %>

  <script>
    /*For textarea*/
    autosize(document.querySelectorAll('textarea'));
    NotifierjsConfig.position = ["bottom", "right"];
  </script>

</body>
</html>
