<!DOCTYPE html>
<html ng-app="sportApp">
<head>
  <meta charset="utf-8">
  <title>Sporta</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="" />
  <!-- css -->
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>

</head>
<body>
  {{2+3}}
  <div id="wrapper">
    <!-- start header -->
    <header>
      <div class="navbar navbar-default navbar-static-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
            <a class="navbar-brand" href="index.html"><span>S</span>porta</a> </div>
            <div class="widget col-lg-5 navbar-brand">
              <form class="form-search" margin = "30px 0px 0px 0px">
                <input class="form-control" type="text" placeholder="Search..">
              </form>
            </div>
            <div class="navbar-collapse collapse" ng-include="'nav/_nav.html'">
            </div>
          </div>
        </div>
      </header>
      <!-- end header -->

      <section id="content">
        <!-- NOI DUNG O DAY -->
        <div class="container">
          <div ui-view></div>
        </div>
        <div class="modals">
         <!-- Modal for login-->
         <div id="login-modal"  class="modal fade" >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close"
                data-dismiss="modal"
                aria-hidden="true">&times;</button>
                <h1>LOGIN</h1>
              </div>
              <div class="modal-body" ng-include="'auth/_login.html'">
              </div>
            </div>
          </div>
        </div>

        <!-- Modal for register-->
        <div id="register-modal"  class="modal fade" >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close"
                data-dismiss="modal"
                aria-hidden="true">&times;</button>
                <h1>SIGN UP</h1>
              </div>
              <div class="modal-body" ng-include="'auth/_register.html'">
              </div>

            </div>
          </div>
        </div>
        <!-- Modal for forget password -->
        <div id="forget-password-modal"  class="modal fade" >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close"
                data-dismiss="modal"
                aria-hidden="true">&times;</button>
                <h1>RESET PASSWORD</h1>
              </div>
              <div class="modal-body">
                <form id="form1" name="form1" method="post" action="">
                  <table width="100%" border="0" class="table-login">
                    <tbody>
                      <tr>
                        <td align="right"><label for="textfield">*Email:</label></td>
                        <td colspan="2"><input name="textfield" type="text" class="form-control" id="textfield" /></td>
                      </tr>
                      <tr>
                        <td>&nbsp;</td>
                        <td align="left"><input type="button" value="Get new password" class="btn btn-theme" /></td>
                        <td align="left"></td>
                      </tbody>
                    </table>
                    &nbsp;
                  </form>
                </div>

              </div>
            </div>
          </div>
        </div>
      </section>

      <footer >

        <div id="sub-footer">
          <div class="container">
            <div class="row">
              <div class="col-lg-6">
                <p> <span>Sporta 2014 </span> </p>
              </div>
              <div class="col-lg-6">
                <ul class="social-network">
                  <li><a href="#" data-placement="top" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </footer>

      <a class="scrollup"><i class="glyphicon glyphicon-arrow-up"></i></a>

      <script>
        $(document).ready(function(e) {
          $('#login-on-register').click(function(e) {
            $('#register-modal').modal('toggle');
            $('#login-modal').modal('toggle');
          });

          $('#signup-on-login').click(function(e) {
            $('#register-modal').modal('toggle');
            $('#login-modal').modal('toggle');
          });

          $('#forget-password-on-login').click(function(e) {
            $('#login-modal').modal('toggle');
            $('#forget-password-modal').modal('toggle');
          });
        });
      </script>
    </body>
    </html>